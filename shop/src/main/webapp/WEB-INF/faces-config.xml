<?xml version="1.0"?>

<!-- Java EE 7
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
-->
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
 <application>
  <locale-config>
   <default-locale>en</default-locale>
   <supported-locale>de</supported-locale>
  </locale-config>
  
  <message-bundle>ApplicationMessages</message-bundle>

  <resource-bundle>
   <base-name>web.Messages</base-name>
   <var>msg</var>
  </resource-bundle>
  
  <resource-bundle>
   <base-name>web.kundenverwaltung.Messages</base-name>
   <var>msgKv</var>
  </resource-bundle>
  
  <resource-bundle>
   <base-name>web.bestellverwaltung.Messages</base-name>
   <var>msgBv</var>
  </resource-bundle>
 
  <resource-bundle>
   <base-name>web.artikelverwaltung.Messages</base-name>
   <var>msgAv</var>
  </resource-bundle>
  
  <resource-bundle>
   <base-name>web.auth.Messages</base-name>
   <var>msgAuth</var>
  </resource-bundle>
 </application>
</faces-config>
